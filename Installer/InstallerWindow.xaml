<?xml version="1.0" encoding="utf-8" ?>
<winuiex:WindowEx
    x:Class="Installer.InstallerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Installer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winuiex="using:WinUIEx"
    Title="AT Installer"
    Width="600"
    Height="300"
    Closed="OnClosed"
    IsMaximizable="False"
    IsMinimizable="False"
    IsResizable="False"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Image
                Width="15"
                Height="15"
                Margin="7.5,0,0,0"
                VerticalAlignment="Center"
                Source="ms-appx:///Assets/Icon.png" />
            <TextBlock
                x:Name="TbTitle"
                Margin="7.5,0,0,0"
                FontWeight="SemiBold"
                Text="AT Installer" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="1"
            Padding="10,10"
            BorderThickness="0,1,0,0">
            <TextBlock
                x:Name="TbApplicationName"
                FontSize="30"
                FontWeight="Bold"
                IsTextTrimmedChanged="OnApplicationNameIsTextTrimmedChanged"
                MaxLines="1"
                Text="AT Installer"
                TextTrimming="CharacterEllipsis" />
            <TextBlock
                x:Name="TbApplicationPublisher"
                Style="{ThemeResource BodyTextBlockStyle}"
                Text="Author: Howon Lee" />
            <TextBlock
                x:Name="TbApplicationVersion"
                Style="{ThemeResource BodyTextBlockStyle}"
                Text="Loading..." />
        </StackPanel>

        <Frame
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,20,10,0"
            Padding="15"
            VerticalAlignment="Top"
            CornerRadius="10">
            <Viewbox>
                <Grid>
                    <SymbolIcon
                        x:Name="SiApplicationIconFallback"
                        Opacity="0.5"
                        Symbol="Library" />
                    <Image x:Name="ImgApplicationIcon" />
                </Grid>
            </Viewbox>
        </Frame>

        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Padding="0,0,10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal"
            Spacing="5">
            <Button
                x:Name="BtInstall"
                Click="OnInstallButtonClicked"
                Content="Install" />
        </StackPanel>

        <TextBlock
            x:Name="TbInstallProgress"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="10,0,10,60"
            VerticalAlignment="Bottom" />

        <ProgressBar
            x:Name="PbInstallProgress"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="10,0,10,50"
            VerticalAlignment="Bottom"
            Visibility="Collapsed" />

        <Grid
            x:Name="GdLoading"
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            Visibility="Collapsed">
            <Rectangle Fill="{ThemeResource AcrylicInAppFillColorBaseBrush}" />
        </Grid>
    </Grid>
</winuiex:WindowEx>
